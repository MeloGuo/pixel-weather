// weather/index.wxs
module.exports = {
  // 湿度处理
  humidity: function (h) {
    if (h) {
      return '湿度 ' + h + '%'
    }
    return h
  },
  // 根据风的 code 和风力输出文案
  wind: function (code, level) {
    if (!code) {
      return '无风'
    }
    if (level) {
      level = level.toString().split('-')
      level = level[level.length - 1]
      return code + ' ' + level + '级'
    }
    return code
  }
}
